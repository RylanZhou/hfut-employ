.content {
  padding-top: 0rpx;
  background-color: #fff;
}

.frombtn {
  background-color: #fff;
  border-radius: 0;
  text-align: left;
  width:100%;
}

.frombtn::after {
  border: none;
  border-radius: 0;
}

.joblist {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: stretch;
  border-bottom: solid 1px #ccc;
  padding: 15rpx;
}

.none {
  padding-top: 15rpx;
  text-align: center;
  background-color: transparent;
  height: 100%;
}

.jobinfo {
  display: flex;
  padding: 0rpx;
  flex-direction: row;
}

.jobleft {
  display: block;
  float: left;
  width: 25%;
  height: 160rpx;
}

.jobleft image {
  width: 100%;
  height: 100%;
  margin: 0px;
}

.jobright {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: stretch;
  padding-left: 30rpx;
  width: 80%;
}

.jobright .caption {
  font-size: 36rpx;
  margin-bottom: 0rpx;
  text-align: left;
  width: 100%;
  height: 120rpx;
}

.jobright .jobname {
  font-size: 36rpx;
  margin-bottom: 0rpx;
  text-align: left;
  width: 100%;
  height: 80rpx;
  line-height: 40rpx;
}

.jobright .company {
  font-size: 32rpx;
  margin-bottom: 0rpx;
  text-align: left;
  width: 100%;
  height: 40rpx;
  line-height: 40rpx;
  text-overflow: ellipsis;
  overflow: hidden;
}

.jobright .salary {
  font-size: 32rpx;
  margin-bottom: 0rpx;
  text-align: left;
  width: 100%;
  height: 40rpx;
  line-height: 40rpx;
  color: red;
}

 .line {
  display: flex;
  flex-direction: row;
  height: 40rpx;
  line-height: 40rpx;
  width: 100%;
}

.line .unit {
  font-size: 30rpx;
  text-align: center;
  width: 50%;
  color: #666;
  height: 40rpx;
  line-height: 40rpx;
  text-overflow: ellipsis;
  overflow: hidden;
}

.line .post {
  float: right;
  font-size: 30rpx;
  padding-right: 0rpx;
  text-align: center;
  color: #666;
  height: 40rpx;
  line-height: 40rpx;
}

.line .data {
  font-size: 30rpx;
  text-align: left;
  width: 65%;
  color: #666;
  height: 40rpx;
  line-height: 40rpx;
  text-overflow: ellipsis;
  overflow: hidden;
}

.line .clickcount {
  float: right;
  font-size: 30rpx;
  padding-right: 0rpx;
  text-align: right;
  color: #666;
  height: 40rpx;
  line-height: 40rpx;
}

.line .leaves {
  float: right;
  font-size: 30rpx;
  margin-bottom: 20rpx;
  padding-right: 10rpx;
  text-align: right;
  color: red;
  width: 28%;
}

.address {
  display: flex;
  flex-direction: row;
  justify-content: left;
  align-items: stretch;
  font-size: 32rpx;
  height: 50rpx;
  line-height: 50rpx;
  color: #999;
  text-overflow: ellipsis;
  overflow: hidden;
}

.jobaddtion2 {
  display: flex;
  flex-direction: row;
  justify-content: left;
  align-items: stretch;
  font-size: 25rpx;
  height: 35rpx;
  line-height: 35rpx;
  color: #999;
  margin-top: 10px;
}

.jobaddtion {
  display: flex;
  flex-direction: row;
  justify-content: left;
  align-items: stretch;
  font-size: 28rpx;
  line-height: 40rpx;
  color: #999;
  margin-top: 5px;
}

.jobaddtion2left {
  width: 60%;
  text-align: left;
}

.jobaddtion2right {
  width: 40%;
  text-align: right;
  padding-right: 10rpx;
}

.search {
  width: 80%;
}

.search_arr {
  border: 1px solid #d0d0d0;
  border-radius: 10rpx;
  margin-left: 20rpx;
}

.search_arr input {
  margin-left: 60rpx;
  height: 60rpx;
  border-radius: 5px;
}

.bc_text {
  line-height: 68rpx;
  height: 68rpx;
  margin-top: 34rpx;
}

.sousuo {
  margin-left: 15rpx;
  width: 15%;
  line-height: 150%;
  text-align: center;
  border: 1px solid #d0d0d0;
  border-radius: 10rpx;
}

.page_row {
  padding-top: 10px;
  position: fixed;
  display: flex;
  flex-direction: row;
  background-color: #fff;
  width: 100%;
  z-index: 9999;
  opacity: 1;
}

.searchcion {
  margin: 10rpx 10rpx 10rpx 10rpx;
  position: absolute;
  left: 25rpx;
  z-index: 2;
  width: 20px;
  height: 20px;
  text-align: center;
}

.weui-loadmore {
  width: 65%;
  margin: 1.5em auto;
  line-height: 1.6em;
  font-size: 14px;
  text-align: center;
}

.weui-loadmore__tips {
  display: inline-block;
  vertical-align: middle;
}

.weui-loading {
  margin: 0 5px;
  width: 20px;
  height: 20px;
  display: inline-block;
  vertical-align: middle;
  -webkit-animation: weuiLoading 1s steps(12, end) infinite;
  animation: weuiLoading 1s steps(12, end) infinite;
  background: transparent url(data:image/svg+xml;base64,) no-repeat;
  background-size: 100%;
}
