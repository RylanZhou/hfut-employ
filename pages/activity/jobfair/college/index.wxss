@import '../../../../weui.wxss';
@import '../../index.wxss';

.job-cell {
  display: flex;
  flex-direction: column;
  justify-content: left;
  align-items: stretch;
  padding: 0px;
  margin: 0px 15px;
  position: relative;
  display: -webkit-box;
  display: -webkit-flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
  background-color: #fff;
}

.lineview {
  display: flex;
  flex-direction: row;
  padding: 0rpx;
  width: 100%;
}

.spaceline {
  display: block;
  width: 100%;
  background-color: #eee;
  height: 30rpx;
}

.theme {
  margin: 8px auto;
  line-height: 50rpx;
  font-size: 36rpx;
  font-weight:bold;
}

.line1 {
  display: block;
  width: 100%;
}

.jobname {
  float: left;
  font-size: 34rpx;
  height: 80rpx;
  line-height: 80rpx;
  color: #000;
  width: 80%;
  text-overflow: ellipsis;
  overflow: hidden;
}

.salary {
  float: right;
  font-size: 34rpx;
  height: 80rpx;
  line-height: 80rpx;
  text-align: right;
  color: #999; 
   width: 20%;
}

.line2 {
  display: flex;
  flex-direction: row;
  justify-content: left;
  align-items: stretch;
  font-size: 30rpx;
  height: 60rpx;
  line-height: 60rpx;
  color: #999;
  text-overflow: ellipsis;
  overflow: hidden;
  text-align: left;
  width: 100%;
  padding-bottom: 10rpx;
}

.line2 .span {
  height: 60rpx;
  line-height: 60rpx;
  margin-right: 25rpx;
  font-size: 34rpx;
  color: #999;
}

.jobrow {
  padding: 25rpx auto;
  float: right;
  display: block;
  width: 100%;
}

.jobcolumn {
  display: flex;
  flex-direction: row;
  justify-content: left;
  padding: 25rpx auto;
  width: 100%;
}

.title {
  display: block;
  padding: 0rpx;
  width: 100%;
  text-align: left;
  height: 100rpx;
  line-height: 100rpx;
  font-size: 34rpx;
  font-weight: 200;
  border-bottom: solid 1rpx #ccc;
  color: #000;
}
