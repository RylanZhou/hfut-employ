.page-container {
  position: relative;
  height: 100vh;
  overflow: hidden;
  background-color: #eee;
}

.search-form {
  position: fixed;
  top: 180rpx;
  z-index: 999;
  display: flex;
  align-items: center;
  width: 100%;
  border-bottom: 4rpx solid #eee;
  background-color: white;
}

.search-form .search {
  display: inline-block;
  width: 600rpx;
}

.search-form .button {
  flex-grow: 1;
  display: inline-block;
  vertical-align: middle;
  height: 34px;
  line-height: 34px;
  margin-right: 24rpx;
  border-radius: 4rpx;
  font-size: 28rpx;
  color: white;
  background-color: #ba2d34;
}

.search-form .button:active {
  background-color: #832529;
}

.search-form .button::after {
  border: none;
}

.college-list {
  margin-top: 290rpx;
  height: 1000rpx;
}

.none {
  padding: 20rpx 0;
  color: #aaa;
  text-align: center;
}

.college {
  position: relative;
  padding: 40rpx;
  margin: 20rpx 0;
  background-color: white;
}

.college .image {
  position: absolute;
  z-index: 10;
  bottom: 0;
  right: 0;
  width: 100rpx;
  height: 100rpx;
  opacity: 0.1;
}

.college .caption {
  padding-right: 30rpx;
  font-size: 32rpx;
  color: #222;
}

.college .number {
  margin-top: 20rpx;
  font-size: 28rpx;
  color: #aaa;
}

.college .arrow {
  position: absolute;
  z-index: 11;
  right: 30rpx;
  top: 50%;
  transform: translateY(-50%);
  width: 50rpx;
  height: 50rpx;
}
