/**app.wxss**/

page {
  /** height: 100%;**/
  background-color: #eee;
}

.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
}

.wx-form {
  width: 100%;
}

.wx-block {
  padding-top: 40rpx;
  background-color: #eee;
  width: 100%;
}

.wx-cells {
  width: 100%;
  font-size: 34rpx;
  background-color: #fff;
}

.wx-cell-person {
  margin: 20rpx 30rpx;
  padding: 0rpx 25rpx;
  display: flex;
  align-items: center;
  background-color: #fff;
}

.wx-cell-line {
  height: 100rpx;
  line-height: 100rpx;
  margin: 0 30rpx;
  padding: 0rpx 25rpx;
  display: flex;
  align-items: center;
  background-color: #fff;
  border-bottom: 1rpx solid #d9d9d9;
}

.wx-cell {
  height: 100rpx;
  line-height: 100rpx;
  margin: 0 30rpx;
  padding: 0rpx 25rpx;
  display: flex;
  align-items: center;
  background-color: #fff;
}

.wx-cell2 {
  height: 100rpx;
  line-height: 100rpx;
  display: flex;
  align-items: right;
  background-color: #fff;
}

.wx-cell-icon {
  width: 56rpx;
  height: 56rpx;
}

.wx-cell-text {
  flex: 1;
  margin-left: 30rpx;
}

.wx-cell-arrow {
  width: 30rpx;
  height: 30rpx;
  margin-left: 10rpx;
}

.wx-cell-arrow2 {
  width: 30rpx;
  height: 30rpx;
  margin: 35rpx 0 35rpx 10rpx;
}

.wx-cell-inner {
  padding: 30rpx 30rpx 30rpx 0;
  margin-left: 30rpx;
  border-bottom: 1rpx solid #d9d9d9;
}

.wx-cell-left {
  font-size: 35rpx;
  align-items: center;
}

.wx-cell-right {
  align-items: center;
}

.wx-cell-right-text {
  font-size: 30rpx;
  color: #808080;
}

.no-border {
  border: 0;
}

.flex-column {
  display: flex;
  flex-direction: column;
}

.flex-rest-height {
  flex: 1;
  height: initial;
}

.flex-row {
  display: flex;
  flex-direction: row;
}

.flex-rest-width {
  flex: 1;
  width: initial;
}

.placeholder-class {
  color: #808080;
  font-size: 26rpx;
}

.user-avatar {
  width: 130rpx;
  height: 130rpx;
  border: 1rpx solid #d9d9d9;
  border-radius: 10rpx;
  background-color: #c8c8c8;
}

.user-info {
  display: flex;
  flex: 1;
  flex-direction: column;
  font-size: 34rpx;
  margin-left: 30rpx;
}

.user-info-text {
  margin: 10rpx 0;
}

.user-info-uid {
  font-size: 28rpx;
  color: #808080;
}

.joblist {
  display: flex;
  width: 100%;
  overflow: hidden;
  justify-content: center;
  align-items: stretch;
  border-bottom: solid 1px #ccc;
  padding: 15rpx;
}

.content {
  width: 100%;
  margin-right: 0;
  -webkit-transition: all 0.4s;
  transition: all 0.4s;
  -webkit-transform: translateX(90px);
  transform: translateX(90px);
  margin-left: -90px;
  background-color: #fff;
}

.del {
  background-color: orangered;
  width: 90px;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  color: #fff;
  -webkit-transform: translateX(90px);
  transform: translateX(90px);
  -webkit-transition: all 0.4s;
  transition: all 0.4s;
}

.touch-move-active .content,
.touch-move-active .del {
  -webkit-transform: translateX(0);
  transform: translateX(0);
}

.jobinfo {
  display: flex;
  padding: 0rpx;
  flex-direction: row;
}

.jobleft {
  display: block;
  float: left;
  width: 25%;
  height: 160rpx;
}

.jobleft image {
  width: 100%;
  height: 100%;
  margin: 0px;
}

.jobright {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: stretch;
  padding-left: 10rpx;
  width: 80%;
}

.jobright .caption {
  font-size: 36rpx;
  margin-bottom: 0rpx;
  text-align: left;
  width: 100%;
  height: 120rpx;
}

.jobright .jobname {
  font-size: 36rpx;
  margin-bottom: 0rpx;
  text-align: left;
  width: 100%;
  height: 80rpx;
  line-height: 40rpx;
}

.jobright .company {
  font-size: 32rpx;
  margin-bottom: 0rpx;
  text-align: left;
  width: 100%;
  height: 40rpx;
  line-height: 40rpx;
  text-overflow: ellipsis;
  overflow: hidden;
}

.jobright .salary {
  font-size: 32rpx;
  margin-bottom: 0rpx;
  text-align: left;
  width: 100%;
  height: 40rpx;
  line-height: 40rpx;
  color: red;
}

.jobright .line {
  display: flex;
  flex-direction: row;
  height: 40rpx;
  line-height: 40rpx;
  width: 100%;
}

.line .data {
  font-size: 30rpx;
  text-align: left;
  width: 65%;
  color: #666;
  height: 40rpx;
  line-height: 40rpx;
  text-overflow: ellipsis;
  overflow: hidden;
}

.line .clickcount {
  float: right;
  font-size: 30rpx;
  padding-right: 0rpx;
  text-align: right;
  color: #666;
  height: 40rpx;
  line-height: 40rpx;
}

.jobaddtion2 {
  display: flex;
  flex-direction: row;
  justify-content: left;
  align-items: stretch;
  font-size: 25rpx;
  height: 35rpx;
  line-height: 35rpx;
  color: #999;
  margin-top: 10px;
}

.jobaddtion {
  display: flex;
  flex-direction: row;
  justify-content: left;
  align-items: stretch;
  font-size: 28rpx;
  line-height: 40rpx;
  color: #999;
  margin-top: 5px;
}

.jobaddtion2left {
  width: 50%;
  text-align: left;
}

.jobaddtion2right {
  width: 50%;
  text-align: right;
  padding-right: 30rpx;
}

.search {
  width: 80%;
}

.search_arr {
  border: 1px solid #d0d0d0;
  border-radius: 10rpx;
  margin-left: 20rpx;
}

.search_arr input {
  margin-left: 60rpx;
  height: 60rpx;
  border-radius: 5px;
}

.bc_text {
  line-height: 68rpx;
  height: 68rpx;
  margin-top: 34rpx;
}

.sousuo {
  margin-left: 15rpx;
  width: 15%;
  line-height: 150%;
  text-align: center;
  border: 1px solid #d0d0d0;
  border-radius: 10rpx;
}

.page_row {
  padding-top: 10px;
  position: fixed;
  display: flex;
  flex-direction: row;
  background-color: #fff;
  width: 100%;
  z-index: 9999;
  opacity: 1;
}

.searchcion {
  margin: 10rpx 10rpx 10rpx 10rpx;
  position: absolute;
  left: 25rpx;
  z-index: 2;
  width: 20px;
  height: 20px;
  text-align: center;
}

.weui-loadmore {
  width: 65%;
  margin: 1.5em auto;
  line-height: 1.6em;
  font-size: 14px;
  text-align: center;
}

.weui-loadmore__tips {
  display: inline-block;
  vertical-align: middle;
}

.qbtn {
  border: none;
  font-size: 34rpx;
  width: 100%;
  background-color: #fff;
  text-align: left;
  height: 30px;
  line-height: 30px;
}
.qbtn::after {
  border: none;
}
