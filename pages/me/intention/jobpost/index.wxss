@import '../../../../weui.wxss';


.list {
  display: flex;
  width: 100%;
  overflow: hidden;
  justify-content: center;
  align-items: stretch;
  border-bottom: solid 1px #ccc;
}

.content {
  width: 100%;
  margin-right: 0;
  padding: 10rpx 25rpx;
  -webkit-transition: all 0.4s;
  transition: all 0.4s;
  -webkit-transform: translateX(60px);
  transform: translateX(60px);
  margin-left: -60px;
  background-color: #fff;
}

.page-section-title{
  font-size: 28rpx;
  color: #999999;
  margin-bottom: 10rpx;
  padding-left: 40rpx;
  padding-bottom: 10rpx;
  text-align: left;
  border-bottom: solid 1px #D9D9D9;
  width:100%;
}

.tools {
  margin: 10rpx 0rpx;
  background-color: #ddd;
  display: flex;
  flex-direction: row;
  width: 60px;
  text-align: center;
  color: #fff;
  align-items: center;
  justify-content: center;
  -webkit-transform: translateX(60px);
  transform: translateX(60px);
  -webkit-transition: all 0.4s;
  transition: all 0.4s;
  font-size: 13px;
}



.del {
  background-color: orangered;
  width: 60px;
  text-align: center;
  color: #fff;
  align-items: center;
  justify-content: center;
  font-size: 13px;
  height: 80rpx;
  line-height: 80rpx;
}

.touch-move-active .content, .touch-move-active .tools {
  -webkit-transform: translateX(0);
  transform: translateX(0);
}

.education {
  overflow: hidden;
  display: flex;
  flex-direction: column;
  justify-content: left;
  font-size: 34rpx;
}

.title {
  width: 100%;
  padding-left: 10rpx;
  white-space: normal;
  text-align: left;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 36rpx;
}

.weui-bar-bottom {
  position: fixed;
  width: 100%;
  text-align: center;
  background-color: #efefef;
  bottom: 0rpx;
  _position: absolute;
  margin-top: 80px;
  z-index: 10000;
}

.weui-btn-area {
  margin: 1em 15px;
}
